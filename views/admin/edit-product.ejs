}

.thumbnail {
    position: relative;
    width: 100px;
    height: 100px;
    border: 1px solid #ddd;
    padding: 5px;
    background-color: #f9f9f9;
    display: inline-block;
}

.thumbnail img {
    width: 50px;
    height: 50px;
    object-fit: contain;
}

.remove-icon {
