              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </header>
      <!-- Sidebar -->
      <div class="d-flex">
        <nav class="flex-column pt-4 sidebar">
            <a href="/admin/dashboard" class="nav-link d-flex align-items-center">
                <i class="icon-custom fas fa-tachometer-alt"></i> <span>Dashboard</span>
            </a>
            <a href="/admin/users" class="nav-link d-flex align-items-center">
                <i class="icon-custom fas fa-users"></i> <span>Customers</span>
            </a>
            <a href="/admin/category" class="nav-link d-flex align-items-center">
                <i class="icon-custom fas fa-th-list"></i> <span>Category</span>
