
    <link rel="stylesheet" href="/css/user/profile-sidebar.css">

<% if (flash.success_msg) { %>
    <div id="successAlert" class="alert alert-success"><%= flash.success_msg %></div>
  <% } %>
  <% if (flash.error_msg) { %>
    <div id="errorAlert" class="alert alert-danger"><%= flash.error_msg %></div>
  <% } %>


    <div class="profile-container">
        <!-- Left Sidebar -->
        <div class="sidebar">
            <!-- Profile Details -->
            <div class="profile-details">
                <div class="profile-pic">
                    <!-- Add your profile picture here -->
                    <img src="<%= user.profile_pic %>" alt="Profile Picture" class="avatar">
                </div>
                <div class="user-info">
                    <h6 class="user-name"><%=user.full_name%></h6>
                    <p class="user-email"><%=user.email%></p>
                </div>
            </div>

            <!-- Navigation Links -->
            <ul class="nav-list">
               
              <li><a href="/userProfile?id=<%=user._id%>" class="<%= activePage === 'profile' ? 'active' : '' %>">My Profile</a></li>
              <li><a href="/order-confirm" class="<%= activePage === 'orders' ? 'active' : '' %>">My Orders</a></li>
              <li><a href="/address-view" class="<%= activePage === 'address' ? 'active' : '' %>">Address</a></li>
              <li><a href="/cart">Cart</a></li>
              <li><a href="#" class="<%= activePage === 'wishlist' ? 'active' : '' %>">Wishlist</a></li>
              <li><a href="#" class="<%= activePage === 'coupon' ? 'active' : '' %>">Coupon</a></li>
              <li><a href="#" class="<%= activePage === 'wallet' ? 'active' : '' %>">Wallet</a></li>
              <li><a href="#" class="<%= activePage === 'referral' ? 'active' : '' %>">Referral Details</a></li>
            </ul>
            <!-- Logout Button -->
            <button class="logout-btn"><a href="/logout">Logout</a></button>
        </div>


        <script>
     window.addEventListener('load', () => {
    const successAlert = document.getElementById('successAlert');
    const errorAlert = document.getElementById('errorAlert');

    // Timeout for success message
    if (successAlert) {
        setTimeout(() => {
            successAlert.style.display = 'none';
        }, 2000); // Hide after 5 seconds
    }

    // Timeout for error message
    if (errorAlert) {
        setTimeout(() => {
            errorAlert.style.display = 'none';
        }, 2000);
    }
});

        </script>