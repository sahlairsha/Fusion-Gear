<script>

// Attach event listener to dynamically loaded content
document.addEventListener('click', async (event) => {
    if (event.target.closest('.remove-item')) {
        event.preventDefault(); // Prevent default behavior

        const productId = event.target.closest('.remove-item').getAttribute('data-product-id');

        try {
            const response = await fetch(`/cart/delete/${productId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (response.ok) {
                event.target.closest('tr').remove(); // Remove row from table
                updateCartUI(data);

                Swal.fire({
                    icon: 'success',
                    title: 'Removed',
                    text: 'Product removed from cart successfully!',
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed',
                    text: data.message || 'Failed to remove item',
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Error removing item',
            });
        }
    }
});

function updateCartUI(data) {
    document.querySelector('#cartTotal').textContent = `₹${data.cartTotal}`;
    document.querySelector('#discount').textContent = `-₹${data.discount}`;
    document.querySelector('#netAmount').textContent = `₹${data.netAmount}`;
    document.querySelector('#couponMessage').textContent = data.couponMessage || '';
}

</script>


<script>
document.addEventListener('click', async (event) => {
    if (event.target.closest('.btn-increment') || event.target.closest('.btn-decrement')) {
        event.preventDefault();

        const button = event.target.closest('button');
        const isIncrement = button.classList.contains('btn-increment');
        const productId = button.getAttribute('data-product-id');
        const quantityInput = document.querySelector(`input[data-product-id="${productId}"]`);
        let quantity = parseInt(quantityInput.value);

        // Increment or decrement quantity
        if (isIncrement) {
            quantity++;
        } else if (quantity > 1) {
            quantity--;
        }

        const availableStock = parseInt(button.getAttribute('data-available-stock'));

        // Check if the updated quantity exceeds available stock
        if (quantity > availableStock) {
            Swal.fire({
                icon: 'error',
                title: 'Stock Exceeded',
                text: `Only ${availableStock} items are available in stock.`,
            });
            return;
        }

        try {
            const response = await fetch(`/cart/update-quantity/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ quantity })
            });

            const data = await response.json();

            if (response.ok && data.success) {
                quantityInput.value = quantity;
                updateCartUI(data);
            } else {
                throw new Error(data.message || 'Failed to update product quantity');
            }
        } catch (error) {
            console.error('Error updating quantity:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'Error updating quantity. Please try again.',
            });
        }
    }
});

function updateCartUI(data) {
    // Make sure these elements exist in your HTML
    const cartTotalElement = document.querySelector('#cartTotal');
    const discountElement = document.querySelector('#discount');
    const shippingChargesElement = document.querySelector('#shippingCharges');
    const netAmountElement = document.querySelector('#netAmount');

    if (cartTotalElement) cartTotalElement.textContent = `₹${data.cartTotal}`;
    if (discountElement) discountElement.textContent = `-₹${data.discount}`;
    if (shippingChargesElement) shippingChargesElement.textContent = `₹${data.shippingCharges}`;
    if (netAmountElement) netAmountElement.textContent = `₹${data.netAmount}`;
}
</script>




