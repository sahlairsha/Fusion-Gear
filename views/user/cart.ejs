<style>

.address-box {
    background-color: #f9f9f9; 
    padding: 20px; 
    border-radius: 10px; 
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    width: 90%; 
    max-width: 700px; 
    position: relative; 
    margin-bottom: 40px;
}


.address-box h6 {
    font-size: 1.2rem;
    font-weight: 600; 
    color: #333; 
    margin-bottom: 10px; 
}


.address-box p {
    font-size: 1rem;
    color: #555; 
    margin: 5px 0;
}


.address-box button {
    background-color:#000 ; 
    color: white;
    border: none; 
    padding: 8px 20px; 
    border-radius: 5px;
    font-size: 1rem; 
    cursor: pointer; 
    transition: background-color 0.3s; 
    position: absolute;
    right: 20px; 
}

/* Hover effect for the change button */
.address-box button:hover {
    background-color: #00000079;
}


.address-box button a {
    color: white;
    text-decoration: none; 
}

/* Adding some responsiveness for mobile view */
@media (max-width: 768px) {
    .address-box {
        padding: 15px;
        width: 95%; 
    }

    .address-box h6 {
        font-size: 1.1rem; 
    }

    .address-box p {
        font-size: 0.9rem; 
    }
}
.continue_btn{
    width: 200px;
    height: 50px;
    border-radius: 4px;
    border:1px solid #000;
    text-align: center;
    padding-top: 10px;
    background-color: #fff;
    transition: 0.5s ease-in-out;
}
.continue_btn a{
    color: #000;
    text-transform: uppercase;
    font-weight : 500;
    transition: 0.5s ease-in-out;

}
.continue_btn:hover{
background-color: #000;

}
.continue_btn a:hover{
    color:#fff;
}
.product__cart__item__pic{
    width: 80px;
    height: 30px;
}
.cart__close {
 display: flex;
 align-content: center;
 justify-content: center;
}
.quantity {
display: flex;
 align-content: center;
 justify-content: center;
}

