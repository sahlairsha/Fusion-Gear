<script>
    document.querySelectorAll('.qty-btn').forEach(button => {
        button.addEventListener('click', async (event) => {
            event.preventDefault();
            const productId = button.getAttribute('data-product-id');
            const inputField = document.querySelector(`input[data-product-id="${productId}"]`);
            let quantity = parseInt(inputField.value);
    
            // Increment or decrement quantity
            if (button.classList.contains('inc-btn')) {
                quantity += 1;
            } else if (button.classList.contains('dec-btn') && quantity > 1) {
                quantity -= 1;
            }
    
            // Update the input field
            inputField.value = quantity;
    
            // Send AJAX request to backend
            try {
                const response = await fetch(`/cart/update/${productId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ quantity })
                });
    
                const data = await response.json();
    
                if (response.ok) {
                    updateCartUI(data, productId, quantity);
                } else {
                    Swal.fire('Error', data.message || 'Failed to update quantity', 'error');
                }
            } catch (error) {
                Swal.fire('Error', 'An error occurred while updating quantity', 'error');
            }
        });
    });
    
    function updateCartUI(data, productId, quantity) {
        const productRow = document.querySelector(`tr[data-product-id="${productId}"]`);
        const pricePerUnit = parseFloat(productRow.querySelector('.product__cart__item__text h5').textContent.replace('Price: ₹', ''));
        const productTotal = pricePerUnit * quantity;
    
        productRow.querySelector('.cart__price').textContent = `₹${productTotal.toFixed(2)}`;
    
        // Update cart totals dynamically
        document.querySelector('#cartTotal').textContent = `₹${data.cartTotal}`;
        document.querySelector('#netAmount').textContent = `₹${data.netAmount}`;
        document.querySelector('#shippingCharges').textContent = data.shippingCharges === '0.00' ? 'Free' : `₹${data.shippingCharges}`;
    }
    </script>
    