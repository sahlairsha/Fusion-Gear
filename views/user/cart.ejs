<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="address-box">
                <% if (address.length === 0 || !address.some(doc => doc.address.length > 0)) { %>
                    <div class="text-center">
                        <p class="fs-4">There is no address available. <br> <button class="btn btn-primary" id="showFormBtn">Add New Address</button></p>
                    </div>
                <% } else { %>
                      <!-- Display the first available address from any document -->
                <h3 class="mb-4">Your Address</h3>
                <ul class="list-group mb-4">
                    <% let foundAddress = null; %>
                    <% address.some(function(doc) { %>
                        <% if (doc.address.length > 0) { %>
                            <% foundAddress = doc.address[0]; %> 
                           <% return true;%>
                        <% } %>
                    <% }); %>
                    <% if (foundAddress) { %>
                        <li class="list-group-item">
                            <h6><%= foundAddress.recipient_name %>
                                <% if (foundAddress.addressType) { %>
                                    <span class="badge badge-secondary mb-2"><%= foundAddress.addressType %></span>
                                <% } %>
                            </h6>
                            <strong><%= foundAddress.streetAddress %>, <%= foundAddress.city %>, <%= foundAddress.state %></strong><br>
                            Pincode: <%= foundAddress.pincode %> <br>
                            Landmark: <%= foundAddress.landMark || 'N/A' %><br>
                            <span class="text-muted">Phone: <%= foundAddress.phone || 'N/A' %></span>
                        </li>
                    <% } %>
                </ul>
                <% } %>
            </div>
        </div>

        <!-- Cart Table -->
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cartItems.forEach(item => { %>
                                <tr>
                                    <td class="product__cart__item">
                                        <% if (item.product_id.productImage && item.product_id.productImage.length > 0) { %>
                                            <div class="product__cart__item__pic">
                                                <img src="/uploads/public-image/<%= item.product_id.productImage[0] %>" alt="<%= item.product_id.productName %>">
                                            </div>
                                        <% } else { %>
                                            <div class="product__cart__item__pic">
                                                <img src="/path/to/default-image.jpg" alt="No Image Available">
                                            </div>
                                        <% } %>
                                        <div class="product__cart__item__text">
                                            <h6><%= item.product_id.productName %></h6>
                                            <h5>Price: ₹<%= item.product_id.salePrice %></h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <button class="qty-btn dec-btn" data-product-id="<%= item.product_id._id %>">-</button>
                                            <input type="number" value="<%= item.quantity %>" min="1" data-product-id="<%= item.product_id._id %>">
                                            <button class="qty-btn inc-btn" data-product-id="<%= item.product_id._id %>">+</button>
                                        </div>
                                    </td>
                                    <td class="cart__price">₹<%= cartTotal%></td>
                                    <td class="cart__close">
                                        <a href="#" class="remove-item" data-product-id="<%= item.product_id._id %>" ><i class="fa fa-close"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Cart Summary -->
            <div class="col-lg-4">
                <div class="shopping__cart__summary">
                    <h5>Cart totals</h5>
                    <ul>
                        <li>Subtotal <span id="cartTotal">₹<%= cartTotal %></span></li>
                        <li>Discount <span id="discount">-₹<%= discount %></span></li>
                        <li>Shipping <span id="shippingCharges">₹<%= shippingCharges %></span></li>
                        <li>Total <span id="netAmount">₹<%= netAmount %></span></li>
                    </ul>
                    <div class="checkout-btn">
                        <a href="/checkout" class="primary-btn">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Coupon Section -->
        <div class="row">
            <div class="col-lg-12">
                <div class="coupon__input">
                    <input id="coupon-code" class="coupon-field" type="text" name="couponCode" placeholder="Enter Coupon Code">
                    <button class="apply-button" id="coupon-btn" type="button" onclick="applyCoupon(document.querySelector('input[name=couponCode]').value)">Apply</button>
                    <div id="coupon-err" class="error-message"></div>
                </div>
                <div id="couponMessage" style="color: green;"> <%= couponMessage %> </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->

