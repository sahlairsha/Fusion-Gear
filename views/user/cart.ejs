<script>

// Apply Coupon AJAX Request
async function applyCoupon(couponCode) {
    if (couponCode.trim() === '') {
        return;
    }


    try {
        const response = await fetch('/cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ couponCode })
        });

        const data = await response.json();

        if (response.ok) {
            updateCartUI(data);
            Swal.fire({
                icon: 'success',
                title: 'Coupon Applied',
                text: data.couponMessage || 'Coupon applied successfully!',
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Failed',
                text: data.message || 'Error applying coupon',
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Error applying coupon',
        });
    }
}

function updateCartUI(data) {
    document.querySelector('#cartTotal').textContent = `₹${data.cartTotal}`;
    document.querySelector('#discount').textContent = `-₹${data.discount}`;
    document.querySelector('#grossAmount').textContent = `₹${data.grossAmount}`;
    document.querySelector('#shippingCharges').textContent = `₹${data.shippingCharges}`;
    document.querySelector('#netAmount').textContent = `₹${data.netAmount}`;
    document.querySelector('#couponMessage').textContent = data.couponMessage || '';
}


</script>


<script>
    // Attach event listener to dynamically loaded content
    document.addEventListener('click', async (event) => {
    if (event.target.closest('.remove-item')) {
        event.preventDefault(); // Prevent default behavior

        const productId = event.target.closest('.remove-item').getAttribute('data-product-id');

        try {
            const response = await fetch(`/cart/delete/${productId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (response.ok) {
                event.target.closest('tr').remove(); // Remove row from table
