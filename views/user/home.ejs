    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li data-filter=".new-arrivals">New Arrivals</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <% if (products.length === 0) { %>
                    <div class="product-empty"><p>There are no Products Available</p></div>
                <% } else { %>
                    <% products.forEach(product => { %>
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product-card mb-4">
                                <div class="product-image">
                                    <img src="/uploads/public-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                                </div>
                                
                                <!-- Product Overlay with Name and View Product -->
                                <div class="product-overlay">
                                    <h6 class="product-name"><%= product.productName %></h6>
                                    <a href="/product/view?id=<%= product._id %>" class="overlay-icon">View Product</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
            
            
    </section>
